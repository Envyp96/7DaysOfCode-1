SOLUÇÃO DIA 3

const area = prompt("Você pretende cursar frontend ou backend?");

if (area === "frontend") {
    prompt("Você quer aprender React ou aprender Vue?");
    prompt("Você gostaria de seguir se especializando em FrontEnd ou seguir se desenvolvendo para se tornar Fullstack?")
}

else if (area === "backend") {
    prompt("Você quer aprender C# ou aprender Java?");
    prompt("Você gostaria de seguir se especializando em BackEnd ou seguir se desenvolvendo para se tornar Fullstack?");
}

else () =>
    alert("Você digitou uma resposta inválida");

    let areas = prompt("Qual área você gostaria de aprender ou se especializar?")
while (areas.length < 8) {
    prompt("Que outra área gostaria de aprender?");
    alert("Ótima Escolha");
    areas += 1
}

alert("Ótimo! Continue sempre estudando e buscar maiores conhecimentos acerca dos assuntos que você gosta!!")
